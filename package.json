{
  "name": "cproject-local",
  "displayName": "CProject Local",
  "description": "Manage Node.js and Docker projects, run scripts and docker-compose commands with ease",
  "publisher": "ducnm",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "repository": {
    "url": "https://github.com/minhduc2001/cproject-local",
    "type": "git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cproject-local.runScript",
        "title": "Run Script"
      },
      {
        "command": "cproject-local.stopScript",
        "title": "Stop Script"
      },
      {
        "command": "cproject-local.changePM",
        "title": "Change Package Manager"
      },
      {
        "command": "cproject-local.refreshProjects",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "cproject-local.detectProjects",
        "title": "Detect Projects",
        "icon": "$(sync)"
      },
      {
        "command": "cproject-local.detectAllProjects",
        "title": "Detect All Projects",
        "icon": "$(sync-ignored)"
      },
      {
        "command": "cproject-local.deleteScript",
        "title": "Delete Script"
      },
      {
        "command": "cproject-local.deleteProject",
        "title": "Delete Project"
      },
      {
        "command": "cproject-local.markManual",
        "title": "Mark/Unmark Manual"
      },
      {
        "command": "cproject-local.addToWhitelist",
        "title": "Add Project to Whitelist"
      },
      {
        "command": "cproject-local.searchProjects",
        "title": "CProject: Search Projects",
        "icon": "$(search)"
      },
      {
        "command": "cproject-local.changeConfigPath",
        "title": "CProject: Change Config Save Location",
        "icon": "$(folder)"
      }
    ],
    "keybindings": [
      {
        "command": "cproject-local.searchProjects",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "cproject-local.changeConfigPath",
          "when": "view == cproject-local.treeView && viewItem == configInfo",
          "group": "navigation"
        },
        {
          "command": "cproject-local.changePM",
          "when": "view == cproject-local.treeView && viewItem == project",
          "group": "navigation"
        },
        {
          "command": "cproject-local.markManual",
          "when": "view == cproject-local.treeView && viewItem == project",
          "group": "navigation"
        },
        {
          "command": "cproject-local.deleteProject",
          "when": "view == cproject-local.treeView && viewItem == project",
          "group": "navigation"
        },
        {
          "command": "cproject-local.detectAllProjects",
          "when": "view == cproject-local.treeView && viewItem == project",
          "group": "navigation"
        },
        {
          "command": "cproject-local.addToWhitelist",
          "when": "view == cproject-local.treeView && viewItem == project",
          "group": "navigation"
        },
        {
          "command": "cproject-local.deleteScript",
          "when": "view == cproject-local.treeView && viewItem == script",
          "group": "navigation"
        },
        {
          "command": "cproject-local.stopScript",
          "when": "view == cproject-local.treeView && viewItem == script",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "cproject-local.detectProjects",
          "when": "view == cproject-local.treeView",
          "group": "navigation@1",
          "icon": "$(sync)"
        },
        {
          "command": "cproject-local.detectAllProjects",
          "when": "view == cproject-local.treeView",
          "group": "navigation@2",
          "icon": "$(sync-ignored)"
        },
        {
          "command": "cproject-local.refreshProjects",
          "when": "view == cproject-local.treeView",
          "group": "navigation@3",
          "icon": "$(refresh)"
        },
        {
          "command": "cproject-local.searchProjects",
          "when": "view == cproject-local.treeView",
          "group": "navigation@4",
          "icon": "$(search)"
        },
        {
          "command": "cproject-local.changeConfigPath",
          "when": "view == cproject-local.treeView",
          "group": "navigation@5",
          "icon": "$(folder)"
        }
      ]
    },
    "configuration": {
      "title": "CProject Local",
      "properties": {
        "cproject-local.configPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to save .cproject.json file. Leave empty to save in workspace root. You can use absolute path or '~' for home directory.",
          "markdownDescription": "Custom path to save `.cproject.json` file. Leave empty to save in workspace root. You can use:\n- Absolute path: `C:\\Users\\YourName\\AppData\\Local\\cproject`\n- Home directory: `~/.cproject`\n- Empty (default): Save in workspace root"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cproject-local-container",
          "title": "CProject",
          "icon": "resources/icons/activity.svg"
        }
      ]
    },
    "views": {
      "cproject-local-container": [
        {
          "id": "cproject-local.treeView",
          "name": "CProject Explorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.60.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
