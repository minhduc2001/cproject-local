{
  "name": "cproject-local",
  "displayName": "CProject Local",
  "description": "VSCode extension to manage local projects and run scripts",
  "publisher": "ducnm",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cproject-local.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "cproject-local.startProject",
        "title": "Start Project"
      },
      {
        "command": "cproject-local.runScript",
        "title": "Run Script"
      },
      {
        "command": "cproject-local.stopScript",
        "title": "Stop Script"
      },
      {
        "command": "cproject-local.changePM",
        "title": "Change Package Manager"
      },
      {
        "command": "cproject-local.refreshProjects",
        "title": "Refresh Projects"
      },
      {
        "command": "cproject-local.detectProjects",
        "title": "Detect Projects"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "cproject-local.changePM",
          "when": "view == cproject-local.treeView && viewItem == scriptWithPM",
          "group": "navigation"
        },
        {
          "command": "cproject-local.stopScript",
          "when": "view == cproject-local.treeView && viewItem == scriptWithPM",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "resourceFilename == '.cproject.json'",
          "command": "cproject-local.startProject",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "cproject-local.detectProjects",
          "when": "view == cproject-local.treeView",
          "group": "navigation@1"
        },
        {
          "command": "cproject-local.refreshProjects",
          "when": "view == cproject-local.treeView",
          "group": "navigation@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cproject-local-container",
          "title": "CProject",
          "icon": "resources/icons/activity.svg"
        }
      ]
    },
    "views": {
      "cproject-local-container": [
        {
          "id": "cproject-local.treeView",
          "name": "CProject Explorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}